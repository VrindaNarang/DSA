#include <bits/stdc++.h>
using namespace std;

int maxSubarraySum(vector<int>& arr, int k) {
    int n = arr.size();
    int windowSum = 0;
    int maxSum = INT_MIN;

    for (int i = 0; i < n; i++) {
        windowSum += arr[i];

        if (i >= k - 1) {
            maxSum = max(maxSum, windowSum);
            windowSum -= arr[i - (k - 1)];
        }
    }

    return maxSum;
}

int main() {
    vector<int> arr = {2, 1, 5, 1, 3, 2};
    int k = 3;

    cout << maxSubarraySum(arr, k);
    return 0;
}
