#include <bits/stdc++.h>
using namespace std;

string reverseString(string s) {
    int i = 0;
    int j = s.length() - 1;

    while (i < j) {
        // swap characters at i and j
        char temp = s[i];
        s[i] = s[j];
        s[j] = temp;

        i++;
        j--;
    }
    return s;
}

int main() {
    string s = "hello";
    string reversed = reverseString(s);
    cout << "Reversed string: " << reversed << endl;
    return 0;
}
