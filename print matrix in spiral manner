class Solution:
    def spiralOrder(self, matrix:List[[int]])->List[int]:
        ans=[]
        n=len(matrix)
        m=len(matrix[0])
        top,left=0,0
        bottom,right=n-1,m-1
#first traverse left to right
        while top<=bottom and left<=right:
            for i in range(left,right+1):
                ans.append(matrix[top][i])
            top+=1
#then when on right corner traverse top to bottom 
            for i in range(top,bottom+1):
                ans.append(matrix[i][right])
            right-=1
#then when on bottom corner traverse right to left
            if top<=bottom:
                for i in range(right,left-1,-1):
                    ans.append(matrix[bottom][i])
                bottom-=1
#traverse from bottom to top then 
            if left<=right:
                for i in range(bottom,top-1,-1):
                    ans.append(matrix[i][left])
                left+=1
        return ans   
        
